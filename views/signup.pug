extends base.pug
block content
    .row.justify-content-center
        .col.col-md-6
            .card
                .card-header.text-center
                    | Créer un compte
                .card-body
                    form(action='/register' method='post')
                        if errors && errors.signup
                            for message in errors.signup
                                div #{message}
                        div.form-group
                            label(for='lastname-field')
                                small.text-muted NOM
                            input.form-control(name='lastname' id='lastname-field')
                        div.form-group
                            label(for='firstname-field')
                                small.text-muted Prénom
                            input.form-control(name='firstname' id='firstname-field')
                        div.form-group
                            label(for='email-field')
                                small.text-muted Adresse e-mail
                            input.form-control(name='email' id='email-field' type='email')
                        div.form-group
                            label(for='password-field')
                                small.text-muted Mot de passe
                            input.form-control(id='password-field' type='password' name='password')
                        div.form-group
                            label(for='bio-field')
                                small.text-muted BIO
                            textarea.form-control(id='bio-field' name='bio')
                        button(type='submit').btn.btn-block.btn-primary Créer un compte
            div Already have an account ?
                a(href='/login?redirectTo=' + redirectTo) Sign in !